@model IEnumerable<Hotel.Domain.Entities.Suite>

<h1 class="text-center mt-4 text-white">🏨 Suite List</h1>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-hover shadow-lg custom-table">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price ($)</th>
                    <th>Sqft</th>
                    <th>Occupancy</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Sqft</td>
                        <td>@item.Occupancy</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Suite" asp-action="Create"
                                   class="btn btn-outline-dark btn-sm" title="Add">
                                    <i class="fas fa-plus"></i>
                                </a>
                                <a asp-controller="Suite" asp-action="Update" asp-route-suiteId="@item.SuiteId"
                                   class="btn btn-outline-warning btn-sm" title="Update">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Suite" asp-action="Delete" asp-route-suiteId="@item.SuiteId"
                                   class="btn btn-outline-danger btn-sm" title="Delete"> 
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
