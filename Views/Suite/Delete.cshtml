@model Hotel.Domain.Entities.Suite

<h1 class="text-center mt-5 text-white">⚠️ Delete Suite</h1>

<div class="d-flex justify-content-center mt-4">
    <div class="card bg-dark bg-opacity-75 text-white p-4 shadow-lg" style="width: 100%; max-width: 600px; border-radius: 1rem;">
        <form method="post" class="row g-3">
            <input asp-for="SuiteId" type="hidden" />

            <div class="form-floating col-12">
                <input asp-for="Name" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Name" readonly />
                <label asp-for="Name" class="text-white">Suite Name</label>
            </div>
            <div class="form-floating col-12">
                <input asp-for="Description" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Description" readonly />
                <label asp-for="Description" class="text-white">Suite Description</label>
            </div>
            <div class="form-floating col-12">
                <input asp-for="Price" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Price" readonly />
                <label asp-for="Price" class="text-white">Suite Price</label>
            </div>
            <div class="form-floating col-12">
                <input asp-for="Sqft" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Sqft" readonly />
                <label asp-for="Sqft" class="text-white">Suite Sqft</label>
            </div>
            <div class="form-floating col-12">
                <input asp-for="Occupancy" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Occupancy" readonly />
                <label asp-for="Occupancy" class="text-white">Suite Occupancy</label>
            </div>
            <div class="form-floating col-12">
                <input asp-for="ImageUrl" class="form-control bg-secondary bg-opacity-25 text-white border-0" placeholder="Suite Image" readonly />
                <label asp-for="ImageUrl" class="text-white">Suite Image</label>
            </div>

            <div class="col-12 text-center mt-3">
                <p class="text-danger fw-bold">Are you sure you want to delete this suite?</p>
            </div>

            <div class="col-12 d-flex justify-content-between mt-2">
                <a asp-controller="Suite" asp-action="Index" class="btn btn-outline-light px-4 shadow">
                    🔙 Cancel
                </a>
                <button type="submit" class="btn btn-danger px-4 shadow" onclick="return confirm('Are you sure you want to delete this suite?');">
                    🗑️ Delete
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
