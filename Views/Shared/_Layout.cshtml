<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - King of Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/backgroundStyle.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/InfoForms.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Hotel_Management_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-custom shadow-lg py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-crown me-2 text-warning"></i>King of BooKing
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="User" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
							@if (!User.IsInRole(SD.Admin_Role))
							{
                                <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Privacy">Privacy</a>
							}                    
                        </li>

                        @if (User.IsInRole(SD.Admin_Role))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="contentDropdown" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                                <ul class="dropdown-menu dropdown-menu-glass border-0 shadow" aria-labelledby="contentDropdown">

                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                            <i class="fas fa-users"></i> Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="SuiteNumber" asp-action="Index">
                                            <i class="fas fa-door-closed"></i> Suite Number
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Amenity" asp-action="Index">
                                            <i class="fas fa-cocktail"></i> Amenity
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="contentDropdown" role="button">
                                    🛠️ Content Management
                                </a>
                                <ul class="dropdown-menu dropdown-menu-glass border-0 shadow" aria-labelledby="contentDropdown">

                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Suite" asp-action="Index">
                                            <i class="fas fa-bed"></i> Suites
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="SuiteNumber" asp-action="Index">
                                            <i class="fas fa-door-closed"></i> Suite Number
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Amenity" asp-action="Index">
                                            <i class="fas fa-cocktail"></i> Amenity
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
					<partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="text-light bg-dark border-top mt-auto pt-5 pb-4 shadow-lg">
        <div class="container">
            <div class="row gy-4">
                <div class="col-md-4">
                    <h5 class="text-warning fw-bold mb-3"><i class="fas fa-crown me-2"></i>King of BooKing</h5>
                    <p class="small">
                        Your luxury escape in the heart of hospitality.<br />
                        Experience comfort, elegance & unforgettable moments.
                    </p>
                </div>

                <div class="col-md-4">
                    <h6 class="text-uppercase fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-area="User" asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">🏠 Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">🔒 Privacy Policy</a></li>
                        <li><a asp-area="Admin" asp-controller="Suite" asp-action="Index" class="text-light text-decoration-none">🛏️ Suites</a></li>
                        <li><a asp-area="Admin" asp-controller="Amenity" asp-action="Index" class="text-light text-decoration-none">🍹 Amenities</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h6 class="text-uppercase fw-bold mb-3">Connect with us</h6>
                    <div class="d-flex mb-3">
                        <a href="#" class="text-warning me-3 fs-5"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-warning me-3 fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-warning me-3 fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-warning fs-5"><i class="fab fa-tripadvisor"></i></a>
                    </div>
                    <p class="small mb-1"><i class="fas fa-envelope me-2"></i>info@kingofbooking.gr</p>
                    <p class="small"><i class="fas fa-phone me-2"></i>+30 210 123 4567</p>
                </div>
            </div>

            <hr class="border-light my-4" />

            <div class="text-center small text-muted">
                &copy; 2025 King Of BooKing | Designed with ❤️ by Vasilis
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
